<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--bower:css-->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css" />
    <!--endbower-->
    <!--bower:js-->
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
    <!--endbower-->
    <!--inject:css-->
    <link rel="stylesheet" href="/css/styles.css">
    <!--endInject-->
    <!--inject:js-->
    <script src="/js/app.js"></script>
    <!--endInject-->

</head>



<body>

    <!-- Static navbar -->
    <header class="nav-down">
        <div class="navbar navbar-default " role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
                    <a class="navbar-brand" href="<%=nav[0].Link%>">
                        <%=nav[0].Text%>
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <% for (var i=1; i < nav.length; i++){%>
                            <li>
                                <a href='<%=nav[i].Link%>'>
                                    <%=nav[i].Text%>
                                </a>
                            </li>
                            <%}%>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </header>

    <div id="headerwrap">
        <div class="bodycontainer container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <h4>HELLO PEOPLE, MY NAME IS</h4>
                    <h1>TIM CLARK</h1>
                    <h4>I BUILD THINGS OUT OF STEEL</h4>
                </div>
            </div>
            <! --/row -->
        </div>
        <!-- /container -->
    </div>
    <! --/headerwrap -->

    <section id="works"></section>
    <div class="container">
        <div class="row centered mt mb">
            <h1>My Portfolio</h1>

            <% for (var i=0; i < works.length; i++){%>

                <div class="col-lg-4 col-md-4 col-sm-4 gallery">
                    <%= works[i].Text %>
                        <a href="/Work/<%= i %>"><img src="<%= works[i].Photo[0] %>" class="img-responsive"></a>
                </div>
                <%}%>

        </div>
        <! --/row -->
    </div>
    <! --/container -->

    <div id="social">
        <div class="container">
            <div class="row centered">
                <div class="col-lg-6">
                    <a href="#"><i class="fa fa-linkedin"></i></a>
                </div>
                <div class="col-lg-6">
                    <a href="#"><i class="fa fa-instagram"></i></a>
                </div>
            </div>
            <! --/row -->
        </div>
        <! --/container -->
    </div>
    <! --/social -->


    <div id="footerwrap">
        <div class="container">
            <div class="row centered">
                <div class="col-lg-4">
                    <p><b>BUILDER</b></p>
                </div>

                <div class="col-lg-4">
                    <p>Living in the amazing capital of Texas.</p>
                </div>
                <div class="col-lg-4">
                    <p>tim@itimclark.com</p>
                </div>

            </div>

        </div>
    </div>
    <! --/footerwrap -->

</body>

</html>